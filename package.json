{
  "name": "wayfare_adc",
  "version": "1.0.0",
  "description": "WayFarer is a public bus transportation booking server API, an Andela developer challenge for Andela Blended Learning.",
  "main": "./dist/server.js",
  "scripts": {
    "test": "mocha --require @babel/register",
    "start": "node ./dist/server.js",
    "build": "babel ./src --out-dir dist",
    "create": "node ./src/DB/db createUsersTables",
    "bus": "node ./src/DB/db createBusTable",
    "trip": "node ./src/DB/db createTripTable",
    "drop": "node ./src/DB/db dropUsersTables",
    "dropbus": "node ./src/DB/db dropBusTable",
    "droptrip": "node ./src/DB/db dropTripTable",
    "createall": "node ./src/DB/db createAllTables",
    "dropall": "node ./src/DB/db dropAllTables",
    "serve": "",
    "dev-start": "nodemon --exec babel-node ./src/server.js",
    "generate-lcov": "nyc report --reporter=text-lcov > lcov.info",
    "coveralls-coverage": "coveralls < lcov.info",
    "coverage": "nyc npm test && npm run generate-lcov && npm run coveralls-coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SirG97/WayFarer-ADC.git"
  },
  "author": "Sarge",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/SirG97/WayFarer-ADC/issues"
  },
  "homepage": "https://github.com/SirG97/WayFarer-ADC#readme",
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "chai-http": "^4.3.0",
    "dotenv": "^8.0.0",
    "express": "^4.17.3",
    "jsonwebtoken": "^8.5.1",
    "make-runnable": "^1.3.6",
    "moment": "^2.24.0",
    "pg": "^7.11.0",
    "request": "^2.88.0",
    "swagger-jsdoc": "^3.3.0",
    "swagger-ui-express": "^4.0.7",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.0",
    "@babel/core": "^7.5.0",
    "@babel/node": "^7.5.0",
    "@babel/preset-env": "^7.5.0",
    "@babel/register": "^7.4.4",
    "babel-preset-env": "^1.7.0",
    "babel-watch": "^7.0.0",
    "chai": "^4.2.0",
    "eslint": "^5.3.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-eslint-snake-case": "0.0.6",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.2",
    "istanbul": "^0.4.5",
    "mocha": "^6.1.4",
    "nodemon": "^1.19.1",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2"
  }
}
